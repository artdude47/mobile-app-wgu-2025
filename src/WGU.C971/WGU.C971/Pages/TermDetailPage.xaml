<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGU.C971.Pages.TermDetailPage"
             Title="TermDetailPage">
    
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry x:Name="TitleEntry" Placeholder="Term tile" />

            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout>
                    <Label Text="Start Date"/>
                    <DatePicker x:Name="StartPicker"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="End date"/>
                    <DatePicker x:Name="EndPicker"/>
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Save" Clicked="OnSave" Grid.Column="0"/>
                <Button Text="Back" Clicked="OnBack" Grid.Column="1"/>
            </Grid>

            <BoxView HeightRequest="1" Opacity="0.2" />
            <Label Text="Courses" FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label x:Name="CourseCountLabel" Text="0 / 6"/>
                <Button x:Name="AddCourseBtn" Text="Add Course" Clicked="OnAddCourse" Grid.Column="1" />
            </Grid>

            <CollectionView x:Name="CoursesList" SelectionMode="Single" SelectionChanged="OnCourseSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding Title}" FontAttributes="Bold" Grid.Row="0" Grid.ColumnSpan="2"/>
                            <Label Text="{Binding StartDate, StringFormat='Start: {0:d}'}" Grid.Row="1"/>
                            <Label Text="{Binding EndDate, StringFormat='End: {0:d}'}" Grid.Row="1" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>