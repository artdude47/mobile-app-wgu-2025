<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGU.C971.Pages.TermDetailPage"
             Title="TermDetailPage">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry x:Name="TitleEntry" Placeholder="Term tile" />

            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout>
                    <Label Text="Start Date"/>
                    <DatePicker x:Name="StartPicker"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="End date"/>
                    <DatePicker x:Name="EndPicker"/>
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Save" Clicked="OnSave" Grid.Column="0"/>
                <Button Text="Back" Clicked="OnBack" Grid.Column="1"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>