<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGU.C971.Pages.CourseDetailPage"
             Title="Course Details">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <Entry x:Name="TitleEntry" Placeholder="Course title"/>

            <Grid ColumnDefinitions="*,*">
                <VerticalStackLayout>
                    <Label Text="Start date"/>
                    <DatePicker x:Name="StartPicker"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="End date"/>
                    <DatePicker x:Name="EndPicker"/>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout>
                <Label Text="Due date"/>
                <DatePicker x:Name="DuePicker"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Status"/>
                <Picker x:Name="StatusPicker">
                    <Picker.Items>
                        <x:String>InProgress</x:String>
                        <x:String>Completed</x:String>
                        <x:String>Dropped</x:String>
                        <x:String>PlanToTake</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>

            <Label Text="Instructor" FontAttributes="Bold"/>
            <Entry x:Name="InstrName"  Placeholder="Name"/>
            <Entry x:Name="InstrPhone" Placeholder="Phone" Keyboard="Telephone"/>
            <Entry x:Name="InstrEmail" Placeholder="Email" Keyboard="Email"/>

            <Editor x:Name="NotesEditor" Placeholder="Optional notes" AutoSize="TextChanges"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Share Notes" Clicked="OnShareNotes"/>
                <Button Text="Save" Clicked="OnSave" Grid.Column="1"/>
            </Grid>

            <HorizontalStackLayout Spacing="12">
                <Label Text="Start Alert"/>
                <Switch x:Name="StartAlertSwitch" Toggled="OnStartAlertToggled"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="12">
                <Label Text="End Alert" />
                <Switch x:Name="EndAlertSwitch" Toggled="OnEndAlertToggled"/>
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Opacity="0.2" />
            <Label Text="Assessments" FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label x:Name="AssessCountLabel" Text="0 / 2"/>
                <HorizontalStackLayout Grid.Column="1" Spacing="8">
                    <Button x:Name="AddObjBtn"  Text="Add Objective"   Clicked="OnAddObjective"/>
                    <Button x:Name="AddPerfBtn" Text="Add Performance" Clicked="OnAddPerformance"/>
                </HorizontalStackLayout>
            </Grid>

            <CollectionView x:Name="AssessList"
                SelectionMode="Single"
                SelectionChanged="OnAssessmentSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Type}" Grid.Row="1"/>
                            <Button Grid.Column="1"
                                Text="Delete"
                                CommandParameter="{Binding}"
                                TextColor="White"
                                BackgroundColor="Red"
                                Clicked="OnDeleteAssessment"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Delete Course" TextColor="White" BackgroundColor="Red" Clicked="OnDelete"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>